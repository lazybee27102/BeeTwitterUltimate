<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView_profile_photo_mainPhoto"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:scaleType="centerCrop" />

    <VideoView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/videoView_profile_photo_video"
        android:padding="5dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="5dp"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_profile_photo_comment"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_chat_bubble_white_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_profile_photo_retweet"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_repeat_white_24dp" />

            <TextView
                android:id="@+id/textView_profile_photo_retweet_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/imageView_profile_photo_favorited"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_favorite_white_24dp" />

            <TextView
                android:id="@+id/textView_profile_photo_favorited_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/imageView_profile_photo_share"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_share_white_24dp" />


        </LinearLayout>
    </LinearLayout>

</LinearLayout>