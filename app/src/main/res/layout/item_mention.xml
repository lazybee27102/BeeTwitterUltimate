<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/profile_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView_mention_profile_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_mention_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView_mention_profile_image"
            android:layout_toRightOf="@+id/imageView_mention_profile_image"
            android:singleLine="true"
            android:text="Medium Text"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="5dp" />

        <TextView
            android:id="@+id/textView_mention_create_at"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Small Text"
            android:layout_alignBottom="@+id/textView_mention_profile_name"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:layout_marginRight="5dp" />

        <TextView
            android:id="@+id/textView_mention_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:text="Medium Text"
            android:textColor="#000"
            android:textSize="14sp"
            android:layout_below="@+id/textView_mention_profile_name"
            android:layout_alignLeft="@+id/textView_mention_profile_name"
            android:layout_alignStart="@+id/textView_mention_profile_name"
            android:padding="5dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView_mention_imageURL"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:scaleType="fitXY"
        android:visibility="gone"
        android:padding="5dp" />

    <VideoView
        android:id="@+id/videoView_mention_video"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:visibility="gone"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/colorPrimary"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_mention_comment"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_chat_bubble_white_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView_mention_retweet"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_repeat_white_24dp" />

            <TextView
                android:id="@+id/textView_mention_retweet_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/imageView_mention_favorited"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_favorite_white_24dp" />

            <TextView
                android:id="@+id/textView_mention_favorited_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#ffffff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:id="@+id/imageView_mention_share"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:src="@drawable/ic_share_white_24dp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>



